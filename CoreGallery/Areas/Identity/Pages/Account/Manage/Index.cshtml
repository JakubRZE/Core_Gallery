@page
@model IndexModel
@inject UserManager<IdentityUser> UserManager

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}



<div class="container mt-5">

    <div class="row mt-4">
        <div class="col-3"></div>
        <div class="col-9 text-center text-white">
            <h4>My photos</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-3 mt-5">

            <div class="bg-light round-borders p-2">
                <h4 class="text-center p-1 mt-4">Profile info</h4>
                <hr />
                <p> User name:  <strong>@UserManager.GetUserName(User)</strong></p>
                <hr />
                <div>
                    <p class="d-inline-block mr-2"> Uploaded photos:</p><input asp-for="Input.photoCount" class="customInput d-inline-block w-25" readonly>
                </div>
            </div>

            <div class="round-borders p-1 mt-1 text-center customLinkDiv">
                <a asp-page="./ChangePassword" class="navbar-light navbar-nav nav-link" style="color: black;">Change password.</a>
            </div>

        </div>

        <div class="col-9 text-center text-white">
            <div class="border mt-1 mb-0 p-0"></div>

            <div class="gallery-section mt-0 pt-4">
                <div class="inner-width">
                    <div class="gallery">

                        @foreach (var photo in Model.Input.Photos)
                        {
                            <div class="image d-block p-0 m-2">

                                <a href="@photo.Path" class="image">
                                    <img src="@photo.Path" />
                                </a>

                                <div class="position-relative customBg">
                                    <i class="far fa-trash-alt d-inline customBin"></i>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    $(".gallery").magnificPopup({
        delegate: 'a',
        type: 'image',
        gallery: {
            enabled:true
        }

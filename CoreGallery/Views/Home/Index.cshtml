@model IEnumerable<Photo>

@{
    ViewData["Title"] = "Home Page";
}


<div class="gallery-section">
    <div class="inner-width">
        <h1>Gallery</h1>
        <div class="border"></div>
        <div class="gallery">

            @foreach (var photo in Model)
            {

                <a href="@photo.PhotoThumbnailUrl" class="image">
                    <img src="@photo.PhotoThumbnailUrl" />
                </a>

            }


            @*<a href="~/image/img2.jpg" class="image">
                <img src="~/image/img2.jpg" />
            </a>

            <a href="~/image/img3.jpg" class="image">
                <img src="~/image/img3.jpg" />
            </a>

            <a href="~/image/img4.jpg" class="image">
                <img src="~/image/img4.jpg" />
            </a>*@


        </div>
    </div>
</div>


<script>
    $(".gallery").magnificPopup({
        delegate: 'a',
        type: 'image',
        gallery: {
            enabled:true
        }
    });
</script>























